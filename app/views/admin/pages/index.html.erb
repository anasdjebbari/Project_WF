<h1>Web Pages</h1>
<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Slug</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @pages.each do |page| %>
      <tr>
        <td>
          <%= link_to page.title, edit_admin_page_path(page) %>
        </td>
        <td>
          <%= truncate page.body, length: 100 %>
        </td>
        <td>
          <code>
            <%= url_for_page page %>
          </code>
        </td>
        <td>
          <%= link_to 'Destroy', admin_page_path(page), :method => :delete, :data => { :confirm => 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<p>
  <% Type.all.each do |type| %>
  <%= link_to "New #{type.name}", new_admin_page_path(type: type.name), class: "btn btn-primary" %>
  <% end %>
</p>
